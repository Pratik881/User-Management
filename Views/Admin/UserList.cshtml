@model List<UserManagementSystem.Data.ApplicationUser>

<h2>User List</h2>
<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                   
                    @if (ViewBag.UserRoles != null && ViewBag.UserRoles.ContainsKey(user.Id))
                    {
                        @string.Join(", ", ViewBag.UserRoles[user.Id])
                    }
                    else
                    {
                        <span>No Role Assigned</span>
                    }
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-userId="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="DeleteUser" asp-route-userId="@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
