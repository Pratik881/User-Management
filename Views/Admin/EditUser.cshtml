@model UserManagementSystem.ViewModels.EditUserViewModel

<h2>Edit User - @Model.FullName</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Roles</label>
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedRoles" value="@role"
                @if (Model.SelectedRoles.Contains(role))
                {
                    <text>checked</text>
                }
                />
                <label>@role</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" asp-for="FullName" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
